<%- include("partials/header.ejs") %>

<h1 style="text-align: center; font-size: 20px; margin-top: 2rem;">Tanár hozzáadása / szerkesztése</h1>
<div class="px-5 my-5" style="display: flex; justify-content: center; align-items: center;">
    <form id="editTanar">
        <div class="mb-3">
            <label class="form-label" for="nev">Név</label>
            <input class="form-control" id="nev" name="nev" type="text" placeholder="Név" data-sb-validations="required" />
        </div>
        <div class="mb-3">
            <label class="form-label" for="szuletesiDatum">Születési dátum</label>
            <input class="form-control" id="szuletesiDatum" name="szuletesiDatum" type="date" data-sb-validations="required" />
        </div>
        <div class="mb-3">
            <label class="form-label" for="szakterulet">Szakterület</label>
            <input class="form-control" id="szakterulet" name="szakterulet" type="text" placeholder="Szakterület" data-sb-validations="required" />
        </div>
        <div class="d-grid">
            <button class="btn btn-primary btn-lg disabled" id="submitButton" type="submit">Mentés</button>
        </div>
        </form>
    </div>
</div>
  
