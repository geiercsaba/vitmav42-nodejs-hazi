<%- include("partials/header.ejs") %>

    <div class="container" style="margin: 4rem  ">
        <div class="row">
            <div class="col-12">
                <h2>Diákok lista</h2>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            Név
                        </th>
                        <th>
                            Születési dátum
                        </th>
                        <th>
                            Osztály
                        </th>
                        <th>
                            Átlag
                        </th>
                        <th>
                            &nbsp;
                        </th>
                    </tr>
                    <tr>
                        <% diakok.forEach(function(diak){ %>
                            <tr>
                                <td>
                                    <%= diak.nev %>
                                </td>
                                <td>
                                    <%= diak.datum %>
                                </td>
                                <td>
                                    <%= diak.osztaly %>
                                </td>
                                <td>
                                    <%= diak.atlag %>
                                </td>
                                <td>
                                    <a href="/diak/edit/<%= diak._id %>" class="btn btn-sm btn-primary"><i class="far fa-edit"></i>Módosítás</a>
                                    <a href="/diak/delete/<%= diak._id %>" class="btn btn-sm btn-danger"><i class="far fa-trash-alt"></i>Törlés</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tr>
                </table>
                <br/>
                <a href="/diak/add" class="btn btn-block btn-success">Új diák</a>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  
<%- include("partials/footer.ejs") %>