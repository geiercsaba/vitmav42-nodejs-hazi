<%- include("partials/header.ejs") %>

<h1 style="text-align: center; font-size: 20px; margin-top: 2rem;">Diák <% if (typeof diak === 'undefined') { %>
    létrehozás
<% }else{ %>
    módosítás
<% } %></h1>
<div class="px-5 my-5" style="display: flex; justify-content: center; align-items: center;">
    <form id="editDiak" method="POST">
        <div class="mb-3">
            <label class="form-label" for="nev">Név</label>
            <input class="form-control" id="nev" name="nev" type="text" 
            value="<%= (typeof diak === 'undefined') ? '' : diak.nev %>" />
        </div>
        <div class="mb-3">
            <label class="form-label" for="szuletesiDatum">Születési dátum</label>
            <input class="form-control" id="datum"  name="datum" type="date" 
            value="<%= (typeof diak === 'undefined') ? '' : diak.datum %>"/>
        </div>
        <div class="mb-3">
            <label class="form-label" for="osztaly">Osztály</label>
            <input class="form-control" id="osztaly" name="osztaly" type="number" 
            value="<%= (typeof diak === 'undefined') ? '' : diak.osztaly %>" />
        </div>
        <div class="mb-3">
            <label class="form-label" for="atlag">Átlag</label>
            <input class="form-control" id="atlag" name="atlag" type="number" step="0.01" 
            value="<%= (typeof diak === 'undefined') ? '' : diak.atlag %>" />
        </div>
        <div class="d-grid">
            <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Mentés</button>
        </div>
    </form>
</div>
  
<%- include("partials/footer.ejs") %>